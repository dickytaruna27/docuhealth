<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Profile</title>
</head>
<body>
  <div class="flex-col h-screen">
    
    <!-- ini navbar -->
    <nav class="bg-white dark:bg-red-500 fixed w-full z-20 top-0 start-0 border-b border-red-200 dark:border-red-400">
      <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/disease"> <!-- to homepage --> 
          <label for="" class="text-white text-3xl font-bold">DocuHealth</label>
        </a>
      </div>
    </nav>
    <!-- ini navbar -->
    
    <h2 class="flex text-red-600 mt-20 items-center justify-center text-3xl font-bold">Profil User</h2>

    <!-- ini tabel -->
    <div class="flex justify-center mt-20 mb-20 w-full">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg w-3/4">
        <table class="w-full text-sm text-left rtl:text-right text-red-500 dark:text-red-400">
          <!-- ini table head -->
          <thead class="text-xs text-red-700 uppercase bg-red-50 dark:bg-red-700 dark:text-red-400">
            <tr>
              <th scope="col" class="px-6 py-3 text-white">First Name</th>
              <th scope="col" class="px-6 py-3 text-white">Last Name</th>
              <th scope="col" class="px-6 py-3 text-white">Age</th>
              <th scope="col" class="px-6 py-3 text-white text-right">Gender</th>
            </tr>
          </thead>
          <!-- ini table head -->

          <!-- ini table body -->
          <tbody>
            <% profile.forEach(el => { %>
              <tr class="bg-white border-b dark:bg-red-500 dark:border-red-700 hover:bg-red-50 dark:hover:bg-red-600">
                <th scope="row" class="px-6 py-4 font-medium text-white whitespace-nowrap dark:text-white"><%= el.firstName %></th>
                <td class="px-6 py-4 text-white"><%= el.lastName %></td>
                <td class="px-6 py-4 text-white"><%= Helper.getAge(el.name) %></td>
                <td class="px-6 py-4 text-white text-right"><%= el.gender %></td>
              </tr>
            <% }) %>
          </tbody>
          <!-- ini table body -->
        </table>
      </div>
    </div>
    <!-- ini tabel -->

    <a href="/disease" class="flex items-center justify-center mb-10">  <!--ini ngarah ke home-->
      <button class="bg-red-600 text-white py-3 px-6 rounded-md cursor-pointer transition-colors duration-300 hover:bg-red-500">Back to Home Page</button>
    </a>

    <a href="/logout" class="flex items-center justify-center">  <!--ini ngarah ke logout-->
      <button class="bg-red-600 text-white py-3 px-6 rounded-md cursor-pointer transition-colors duration-300 hover:bg-red-500">Logout</button>
    </a>

</div>
</body>
</html>